<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="pref_key_type"
        android:entries="@array/type"
        android:summary="@string/sort_type_summary"
        android:entryValues="@array/type_values"
        android:title="@string/sort_type"
        android:defaultValue="0" />

    <ListPreference
        android:key="pref_key_direction"
        android:entries="@array/order"
        android:summary="@string/sort_order_summary"
        android:entryValues="@array/orderValues"
        android:title="@string/order"
        android:defaultValue="1" />

    <SwitchPreference
        android:key="pref_key_debug"
        android:summary="@string/debug_summary"
        android:title="@string/debug_info"
        android:defaultValue="false" />

    <com.whiuk.philip.opensmime.ui.Preferences.SeekBarPreference
        android:key="delete_distance"
        android:title="@string/delete_distance"
        android:summary="@string/swipe_distance_summary"
        android:defaultValue="30"
        />

    <com.whiuk.philip.opensmime.ui.Preferences.SeekBarPreference
        android:key="share_distance"
        android:title="@string/share_distance"
        android:summary="@string/swipe_distance_summary"
        android:defaultValue="20"
        />

</PreferenceScreen>